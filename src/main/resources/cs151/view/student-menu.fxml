<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.controller.StudentMenuController"
      spacing="20" alignment="CENTER"
      style="-fx-background-image: url('/student-menu-bg.jpg'); 
             -fx-background-size: cover; 
             -fx-background-position: center center;">

    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
    </padding>

    <Label text="STUDENT PROFILE MENU" 
       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" />


    <Button text="Add Student" onAction="#onAddStudentClick"
        style="-fx-font-size: 16px; 
               -fx-font-weight: bold; 
               -fx-padding: 8 20 8 20;
               -fx-background-color: white; 
               -fx-text-fill: #852143;
               -fx-border-color: black;
               -fx-border-width: 1;
               -fx-border-radius: 10;
               -fx-background-radius: 10;" />
	<Button text="Search Students" onAction="#onSearchStudentClick"
       style="-fx-font-size: 16px; 
               -fx-font-weight: bold; 
               -fx-padding: 8 20 8 20;
               -fx-background-color: white; 
               -fx-text-fill: #852143;
               -fx-border-color: black;
               -fx-border-width: 1;
               -fx-border-radius: 10;
               -fx-background-radius: 10;" />
	<Button text="Student View - Edit - Delete" onAction="#onStudentTableClick"
        style="-fx-font-size: 16px; 
               -fx-font-weight: bold; 
               -fx-padding: 8 20 8 20;
               -fx-background-color: white; 
               -fx-text-fill: #852143;
               -fx-border-color: black;
               -fx-border-width: 1;
               -fx-border-radius: 10;
               -fx-background-radius: 10;" />



</VBox>
