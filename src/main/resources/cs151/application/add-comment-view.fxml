<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.controller.CommentController"
            prefHeight="600.0" prefWidth="700.0">

    <VBox spacing="20">
        <padding>
            <Insets top="20" right="40" bottom="20" left="40"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button fx:id="backButton" text="â† Back" onAction="#onBackButtonClick"
                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-cursor: hand;
                           -fx-padding: 8 20; -fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Add Comment"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <Separator/>

        <!-- Student Name -->
        <VBox spacing="5" style="-fx-padding: 10 0 5 0;">
            <Label text="Student:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="studentNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
        </VBox>

        <Separator/>

        <!-- Add Comment Section -->
        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <Label text="Add a new comment:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextArea fx:id="newComment"
                      promptText="Add new evaluation..."
                      wrapText="true"
                      prefRowCount="6"
                      style="-fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-background-radius: 6;"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 15 0 0 0;">
            <Button text="Add Comment" onAction="#onSaveComment"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px;
                           -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 8;"/>
            <Button text="Close" onAction="#onClose"
                    style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 15px;
                           -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 8;"/>
        </HBox>

    </VBox>

</AnchorPane>
