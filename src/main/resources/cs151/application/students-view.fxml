<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="cs151.controller.StudentsController"
      spacing="20.0" 
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="backButton" text="← Back" onAction="#onBackButtonClick"
                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Label text="Student Management" 
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Add/Edit Student Form -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-font-size: 15px;">
        <Label fx:id="formTitleLabel" text="Create New Student Profile" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <!-- Name (Required) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Name:*" minWidth="150" style="-fx-font-weight: bold;"/>
            <TextField fx:id="nameField" 
                      promptText="Enter student name"
                      prefWidth="400"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
        </HBox>
        
        <!-- Academic Status (Required) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Academic Status:*" minWidth="150" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="academicStatusCombo" 
                     promptText="Select status"
                     prefWidth="400"
                     style="-fx-border-color: #ccc;"/>
        </HBox>
        
        <!-- Email (Optional) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Email:" minWidth="150"/>
            <TextField fx:id="emailField" 
                      promptText="student@example.com"
                      prefWidth="400"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
        </HBox>
        
        <!-- Programming Languages (Optional) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Languages:" minWidth="150"/>
            <TextField fx:id="languagesField" 
                      promptText="e.g., Java, Python, C++ (comma-separated)"
                      prefWidth="400"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
        </HBox>
        
        <!-- Database Skills (Optional) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="DB Skills:" minWidth="150"/>
            <TextField fx:id="dbSkillsField" 
                      promptText="e.g., MySQL, PostgreSQL, MongoDB"
                      prefWidth="400"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
        </HBox>
        
        <!-- Role (Optional) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Role:" minWidth="150"/>
            <TextField fx:id="roleField" 
                      promptText="e.g., Team Leader, Developer"
                      prefWidth="400"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
        </HBox>
        
        <!-- Interests (Optional) -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Interests:" minWidth="150"/>
            <TextArea fx:id="interestsArea" 
                     promptText="Areas of interest..."
                     prefWidth="400"
                     prefHeight="60"
                     wrapText="true"
                     style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
        </HBox>
        
        <!-- Buttons -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Region minWidth="150"/>
            <Button fx:id="saveButton" 
                   text="Save Student" 
                   onAction="#onSaveButtonClick"
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 12 35; -fx-font-size: 16px;"/>
            <Button fx:id="clearButton" 
                   text="Clear Form" 
                   onAction="#onClearButtonClick"
                   style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 12 35; -fx-font-size: 16px;"/>
        </HBox>
        
        <!-- Message Label -->
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Region minWidth="150"/>
            <Label fx:id="messageLabel" text="" minHeight="20"/>
        </HBox>
        
        <Label text="* Required fields" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
    </VBox>
    
    <!-- Students List Section -->
    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Student List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="studentCountLabel" text="Total: 0 students" 
                   style="-fx-font-size: 15px; -fx-text-fill: #666;"/>
        </HBox>
        
        <TableView fx:id="studentsTable" 
                  style="-fx-background-color: white; -fx-font-size: 16px;"
                  VBox.vgrow="ALWAYS"
                  prefHeight="400"
                  minHeight="300"
                  tableMenuButtonVisible="true"
                  fixedCellSize="50">
            <columns>
                <TableColumn fx:id="nameColumn" 
                           text="Name" 
                           prefWidth="200"
                           minWidth="120"
                           resizable="true"
                           sortable="true"/>
                <TableColumn fx:id="academicStatusColumn" 
                           text="Academic Status" 
                           prefWidth="160"
                           minWidth="120"
                           resizable="true"
                           sortable="true"/>
                <TableColumn fx:id="emailColumn" 
                           text="Email" 
                           prefWidth="250"
                           minWidth="150"
                           resizable="true"
                           sortable="true"/>
                <TableColumn fx:id="languagesColumn" 
                           text="Languages" 
                           prefWidth="200"
                           minWidth="120"
                           resizable="true"
                           sortable="false"/>
                <TableColumn fx:id="dbSkillsColumn" 
                           text="DB Skills" 
                           prefWidth="180"
                           minWidth="120"
                           resizable="true"
                           sortable="false"/>
                <TableColumn fx:id="roleColumn" 
                           text="Role" 
                           prefWidth="150"
                           minWidth="100"
                           resizable="true"
                           sortable="false"/>
                <TableColumn fx:id="actionsColumn" 
                           text="Actions" 
                           prefWidth="260"
                           minWidth="200"
                           resizable="true"
                           sortable="false"/>
            </columns>
            <placeholder>
                <Label text="No students added yet. Create a student profile above!"/>
            </placeholder>
        </TableView>
    </VBox>
    
</VBox>

