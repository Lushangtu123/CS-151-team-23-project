<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.controller.StudentTableController">

    <center>
        <TableView fx:id="studentTable" prefHeight="600" prefWidth="1000">
            <columns>
                <TableColumn fx:id="nameCol" text="Full Name" prefWidth="150"/>
                <TableColumn fx:id="statusCol" text="Academic Status" prefWidth="120"/>
                <TableColumn fx:id="employmentCol" text="Employment Status" prefWidth="120"/>
                <TableColumn fx:id="jobCol" text="Job Details" prefWidth="150"/>
                <TableColumn fx:id="languagesCol" text="Languages" prefWidth="150"/>
                <TableColumn fx:id="databasesCol" text="Databases" prefWidth="150"/>
                <TableColumn fx:id="roleCol" text="Preferred Role" prefWidth="120"/>
                <TableColumn fx:id="commentsCol" text="Comments" prefWidth="150"/>
                <TableColumn fx:id="flagCol" text="Flag" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
