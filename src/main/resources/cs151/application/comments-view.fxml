<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.controller.CommentController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #f9f9f9;"
            fitToWidth="true">

    <VBox alignment="TOP_CENTER" style="-fx-padding: 20;">
            <VBox spacing="18" prefWidth="850">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="backButton" text="â† Back"
                        onAction="#onBackButtonClick"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20; -fx-font-size: 14px; -fx-background-radius: 6;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Student Comments"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Student Name -->
            <VBox spacing="5" style="-fx-padding: 5 0 10 0;">
                <Label fx:id="studentNameLabel"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Separator/>
            </VBox>

            <!-- Comments Section -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="All Comments:"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ListView fx:id="commentsList" VBox.vgrow="ALWAYS" prefHeight="350"
                          style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-background-radius: 6;"/>
            </VBox>

            <!-- Add Comment Section -->
            <VBox spacing="8">
                <Label text="Add a new comment:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TextArea fx:id="newComment"
                          promptText="Type your comment here..."
                          wrapText="true" prefRowCount="5"
                          style="-fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-background-radius: 6;"/>
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button text="Add Comment"
                            onAction="#onSaveComment"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 8 20; -fx-cursor: hand; -fx-background-radius: 8;"/>
                    <Button text="Clear" onAction="#onClearComment" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 8 20; -fx-cursor: hand; -fx-background-radius: 8;"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</ScrollPane>