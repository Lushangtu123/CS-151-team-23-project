<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.controller.CommentController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Outer container -->
    <VBox spacing="15" prefWidth="780">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button fx:id="backButton" text="â† Back" onAction="#onBackButtonClick"
                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20; -fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Student Comments"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Student Name -->
        <VBox spacing="5" style="-fx-padding: 5 0 10 0;">
            <Label fx:id="studentNameLabel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Separator/>
        </VBox>

        <!-- Comments Section -->
        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <Label text="Comments:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="commentsList" VBox.vgrow="ALWAYS" prefHeight="400"/>
        </VBox>

    </VBox>

</AnchorPane>
