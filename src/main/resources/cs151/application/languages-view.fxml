<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="cs151.controller.LanguagesController"
      spacing="25.0" 
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="25.0" right="30.0" bottom="25.0" left="30.0"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Button fx:id="backButton" text="← Back" onAction="#onBackButtonClick"
                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 10 24; -fx-font-size: 16px;"/>
        <Label text="Programming Languages" 
               style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Add Language Section -->
    <VBox spacing="18.0" style="-fx-background-color: white; -fx-padding: 28; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="Add New Language" 
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 0 0 8 0;"/>
        
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Label text="Language Name:" 
                   minWidth="160" 
                   style="-fx-font-size: 18px;"/>
            <TextField fx:id="languageNameField" 
                      promptText="e.g., Java, Python, C++"
                      prefWidth="400"
                      minHeight="60"
                      prefHeight="60"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3; -fx-font-size: 18px; -fx-padding: 15 18;"/>
            <Button fx:id="saveButton" 
                   text="Save" 
                   onAction="#onSaveButtonClick"
                   minHeight="60"
                   prefHeight="60"
                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 15 30; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
        
        <!-- Message Label -->
        <Label fx:id="messageLabel" 
               text="" 
               minHeight="30"
               style="-fx-font-size: 16px;"/>
    </VBox>
    
    <!-- Languages List Section -->
    <VBox spacing="15.0" VBox.vgrow="ALWAYS">
        <Label text="Existing Languages" 
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 0 0 5 0;"/>
        
        <TableView fx:id="languagesTable" 
                  VBox.vgrow="ALWAYS"
                  fixedCellSize="55"
                  style="-fx-background-color: white; -fx-font-size: 16px;">
            <columns>
                <TableColumn fx:id="nameColumn" 
                           text="Language Name" 
                           prefWidth="500"
                           minWidth="400"
                           sortable="true"
                           style="-fx-font-size: 16px;"/>
                <TableColumn fx:id="actionsColumn" 
                           text="Actions" 
                           prefWidth="220"
                           minWidth="200"
                           sortable="false"
                           style="-fx-font-size: 16px;"/>
            </columns>
            <placeholder>
                <Label text="No programming languages defined yet. Add one above!"
                       style="-fx-font-size: 16px;"/>
            </placeholder>
        </TableView>
    </VBox>
    
</VBox>