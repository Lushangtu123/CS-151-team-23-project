<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="cs151.controller.LanguagesController"
      spacing="20.0" 
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="backButton" text="â† Back" onAction="#onBackButtonClick"
                style="-fx-background-color: #757575; -fx-text-fill: white; -fx-cursor: hand;"/>
        <Label text="Define Programming Languages" 
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Add Language Section -->
    <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="Add New Language" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="Language Name:" minWidth="120"/>
            <TextField fx:id="languageNameField" 
                      promptText="e.g., Java, Python, C++"
                      prefWidth="300"
                      style="-fx-border-color: #ccc; -fx-border-radius: 3;"/>
            <Button fx:id="saveButton" 
                   text="Save" 
                   onAction="#onSaveButtonClick"
                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20;"/>
        </HBox>
        
        <!-- Message Label -->
        <Label fx:id="messageLabel" text="" minHeight="20"/>
    </VBox>
    
    <!-- Languages List Section -->
    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <Label text="Existing Languages" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        
        <TableView fx:id="languagesTable" 
                  VBox.vgrow="ALWAYS"
                  style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="nameColumn" 
                           text="Language Name" 
                           prefWidth="400"
                           sortable="true"/>
                <TableColumn fx:id="actionsColumn" 
                           text="Actions" 
                           prefWidth="180"
                           sortable="false"/>
            </columns>
            <placeholder>
                <Label text="No programming languages defined yet. Add one above!"/>
            </placeholder>
        </TableView>
    </VBox>
    
</VBox>